<?xml version="1.0" encoding="UTF-8" ?>
<openerp>
<data>
 <!-- Vista Formulario de asignaturas-->
   <record model="ir.ui.view" id="school_asignatura_form_view">
   <field name="name">school.asignatura.form</field>
   <field name="model">school.asignatura</field>
   <field name="arch" type="xml">
     <form string="Formulario de asignaturas">				
          <sheet>  
           <h1>
              <field name="name" placeholder="Nombre de asignatura..." class="oe_inline"/>
          </h1>
	<separator string="Information"/>
	<notebook>
	<page string="Description">
	<field name="description"/>
	</page>
	
	</notebook>
	</sheet>     
     </form>
   </field> 
   </record>  

 <!--  Accion para asignaturas -->
   <record model="ir.actions.act_window" id="school_asignatura_action">
   <field name="name">Asignaturas</field>
   <field name="res_model">school.asignatura</field>
   <field name="view_type">form</field>
   <field name="view_model">tree,form</field>
   <field name="help" type="html">
   <p class="oe_view_nocontent_create">Crear primera seccion</p>
   </field>
   </record>

	
   <!-- Menu Principal de Gestion de sections -->

<menuitem action="school_asignatura_action" string="Asignaturas" id="school_action_asignatura" parent="school_config" sequence="200"/>


</data>
</openerp>


